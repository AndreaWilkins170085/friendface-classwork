{% extends 'base.html.twig' %}

{% block title %}
    Profile | Friendface
{% endblock %}
 
{% block body %}
    <div class = "row" style="padding-left: 40px;">

        This is the proflie page of {{ user.username }} {{ user.email }}, who has {{ user.friends|length }} friends.

    </div>

    <div class="row" style="padding-left: 40px;">

        <ul>

            {% for friend in user.friends %}
                <li>{{ friend.username }}</li>
            {% endfor %}

        </ul>

    </div>
{% endblock %}